#!/bin/bash

### Helper functions
function server() {
  if [[ -z $1 ]]; then
    PORT=8000
  else
    PORT="$1"
  fi

  chromium-browser  "http://localhost:$PORT" &
  python -m SimpleHTTPServer $PORT
}


function precmd () {
 z --add "$(pwd -P)"
}

# Compute gzip size of file
function gsize() {
  if [[ -z $1 ]]; then
    exit 1
  fi

  gzip -c "$1" | wc -c
}
