alias awesome="echo you are awesome"
# -------------------------------------------------------------------
# Noglob
# -------------------------------------------------------------------
alias bower='noglob bower'

# -------------------------------------------------------------------
# Pure awesome
# -------------------------------------------------------------------
alias mvim="mvim --remote-tab-silent"
alias tmux="tmux -2 -u"
alias please="sudo"
alias bashrc=". ~/.bashrc; echo 'Bashrc reloaded...'"
alias github="chromium-browser \`git remote -v | grep github.com | grep fetch | head -1 | field 2 | sed 's/git:/http:/g'\`"
alias fuck='sudo $(fc -ln -1)' 

# -------------------------------------------------------------------
# osx only
# -------------------------------------------------------------------

alias chromium-browser="open -a Google\ Chrome\ Canary.app"

# -------------------------------------------------------------------
# System aliases
# -------------------------------------------------------------------

# alias ls='ls -aF'               # Always add colors and file type extensions
alias ports="lsof -i -n -P"       # Show ports information
alias grep='grep --color=auto'    # Always colored grep
# alias ll='ls -la'

# -------------------------------------------------------------------
# OTHER aliases
# -------------------------------------------------------------------

alias cl="clear"            # Clear
alias mkdir="mkdir -p"      # Make all dirs
alias h="history"           # History
alias j="jobs -p"           # All jobs + progresses
alias bc='bc -l'            # Calculator
alias pa="ps aux"           # Ps aux
alias pag="ps aux | grep"   # Ps aux grep
alias ccat="pygmentize -O style=monokai -f console256"  # Colored cat

# -------------------------------------------------------------------
# Ant aliases
# -------------------------------------------------------------------
alias iant='ant -Dproject.qualifier=-SNAPSHOT'
alias iantBuild='iant clean ; iant build-all-upstream'

# -------------------------------------------------------------------
# Go
# -------------------------------------------------------------------
alias go='export GOPATH=`pwd`;go'

